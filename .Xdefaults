urxvt.font: xft:Hack-Regular:pixelsize=12
urxvt*scrollBar: false
urxvt.keysym.Shift-Up: command:\033]720;1\007
urxvt.keysym.Shift-Down: command:\033]721;1\007
urxvt*urgentOnBell: true
urxvt.bell-command: mpg123 /home/henrique/Downloads/nuclear_launch.mp3
urxvt*cursorBlink: true

!It's been a while so I don't remember why I put this here ;p
urxvt*keysym.Control-Left:\033[1;5D
urxvt*keysym.Control-Right:\033[1;5C

!Font size
URxvt.keysym.C-Up:     perl:font-size:increase
URxvt.keysym.C-Down:   perl:font-size:decrease

!URL Detection
urxvt.perl-ext: default,matcher,clipboard,url-select,keyboard-select,font-size
urxvt.keysym.M-u:           perl:url-select:select_next
urxvt.keysym.M-Escape:      perl:keyboard-select:activate
urxvt.keysym.M-s:           perl:keyboard-select:search
urxvt.url-select.launcher: chromium
urxvt.url-select.underline: true

*cursorColor: #3bf5e8

*fadeColor: #262626
*fading: 20

